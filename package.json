{
  "name": "mijnui-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:react": "tsx --tsconfig ./tsconfig.json ./src/scripts/generate-local-react-registry.mts",
    "build:tailwind": "tsx --tsconfig ./tsconfig.json ./src/scripts/generate-remote-tailwind-registry.mts",
    "build:registry": "pnpm build:react && pnpm build:tailwind",
    "dev": "next dev",
    "start": "next start",
    "check": "npx ultracite check",
    "fix": "npx ultracite fix",
    "types:check": "fumadocs-mdx && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "prepare": "husky"
  },
  "dependencies": {
    "@mijn-ui/react": "^0.4.13",
    "@radix-ui/react-slot": "^1.2.4",
    "axios": "^1.13.2",
    "fumadocs-core": "16.0.14",
    "fumadocs-mdx": "14.0.2",
    "fumadocs-ui": "16.0.14",
    "lucide-react": "^0.552.0",
    "next": "16.0.7",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.1.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "ultracite": "6.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix",
      "pnpm dlx ultracite fix"
    ]
  }
}
